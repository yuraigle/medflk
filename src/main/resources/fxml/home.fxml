<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.orlov.medflk.controller.HomeController">
    <HBox prefWidth="200.0" VBox.vgrow="NEVER">
        <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </VBox.margin>
        <Button mnemonicParsing="false" onAction="#selectFile" text="Выберите файл для проверки"/>
        <Button mnemonicParsing="false" onAction="#updateNsi" text="Скачать пакет НСИ">
            <HBox.margin>
                <Insets left="8.0"/>
            </HBox.margin>
        </Button>
    </HBox>
    <TextArea fx:id="vLog" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0"/>
        </VBox.margin>
    </TextArea>
</VBox>
